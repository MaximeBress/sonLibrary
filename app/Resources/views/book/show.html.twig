{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ book.titre|capitalize }}</h1>

    <div class="row">
        <div class="col s6">
            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ book.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ book.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ book.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col s6">
            <ul>
                <li>
                    <a href="{{ path('book_edit', { 'id': book.id }) }}" class="waves-effect waves-light btn blue">Modifier</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer" class="waves-effect waves-light btn red">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <a href="{{ path('book_index') }}" class="waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour Ã  la liste</a>
        </div>
    </div>

{% endblock %}
